  <%= form_for @donator, :html => { :class => "form-horizontal donator" } do |f| %>

    <% if @donator.errors.any? %>
      <div id="error_explanation" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(donator.errors.count, "error") %> prohibited this donator from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @donator.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%=f.error_span(:name) %>
    </div>
    <div class="form-group">
      <%= f.label :contact_number, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :contact_number, :class => 'form-control' %>
      </div>
      <%=f.error_span(:contact_number) %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  
  <% end %>
  